<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cc3300"
        android:padding="40dp"
        android:text="SimpleCalculator"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:padding="30sp"
        android:layout_gravity="right"
        android:id="@+id/etdisplay"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="4">

      <Button
          android:id="@+id/bt1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@android:color/darker_gray"
          android:text="1"
          android:textSize="25sp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="2"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="3"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/btsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="+"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="4"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="5"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="6"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/btsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="-"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="7"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="8"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="9"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/btmul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="*"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="0"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/btdiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="/"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/btC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="C"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/btans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="="
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />


    </GridLayout>

</LinearLayout>